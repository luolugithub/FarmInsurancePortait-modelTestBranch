<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.tensorflow.demo.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <org.tensorflow.demo.OverlayView
        android:id="@+id/tracking_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.tensorflow.demo.OverlayView
        android:id="@+id/debug_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/collectCostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tool_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:text="time"
        android:textColor="#42dcf4"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/tool_layout"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/record_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/record_control"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@drawable/video_btn_bg"
                android:gravity="center"
                android:text="@string/record"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/textAngelX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="129dp"
        android:background="@android:color/transparent"
        android:text=""
        android:textColor="#42dcf4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textAngelY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tool_layout"
        android:layout_below="@+id/textAngelX"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="556dp"
        android:layout_marginBottom="-597dp"
        android:background="@android:color/transparent"
        android:text=""
        android:textColor="#42dcf4"
        android:textSize="18sp" />

</RelativeLayout>
